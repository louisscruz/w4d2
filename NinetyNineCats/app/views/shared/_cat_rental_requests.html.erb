<h3>Rental Requests</h3>

<table>
  <tbody>
    <tr>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Status</th>
      <th></th>
      <th></th>
    </tr>
    <% @cat_rental_requests.each do |cat_rental_request| %>
    <tr>
      <td><%= cat_rental_request.start_date %></td>
      <td><%= cat_rental_request.end_date %></td>
      <td><%= cat_rental_request.status %></td>
      <td><%=button_to "approve", approve_cat_rental_request_url(cat_rental_request.id), method: :post%></td>
      <td><%=button_to "deny", deny_cat_rental_request_url(cat_rental_request.id), method: :post%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Make New Rental Request', new_cat_cat_rental_request_url(@cat.id) %>
